<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.TimerFragment">

    <TextView
        android:id="@+id/main_fragment_timer_tv"
        android:layout_margin="10dp"
        android:text="@string/_00_00_00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/start_pause_btn"
        android:layout_width="wrap_content"
        android:text="@string/start"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="@dimen/spacing_16"
        android:drawableTint="@color/white"
        android:textAllCaps="false"
        android:drawableStart="@drawable/start"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toStartOf="@+id/reset_btn"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_timer_tv" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/reset_btn"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:backgroundTint="@color/purple"
        android:textColor="@color/white"
        android:drawableTint="@color/white"
        app:layout_constraintStart_toEndOf="@+id/start_pause_btn"
        android:layout_width="wrap_content"
        android:text="@string/reset"
        android:padding="@dimen/spacing_16"
        android:drawableStart="@drawable/reset"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_fragment_timer_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>